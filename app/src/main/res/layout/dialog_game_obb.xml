<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME RESOURCE SETUP"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00FF00"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unlock full performance for high-end games.\n\nImporting OBB files is required to run games like PUBG, COD, and Genshin Impact in the virtual environment."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optimization Status: READY"
        android:textColor="#FFFF00"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:textStyle="italic"/>

</LinearLayout>
