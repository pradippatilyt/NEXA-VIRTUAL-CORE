<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glowing Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke android:width="2dp" android:color="#00E5FF"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- Semi-transparent Body -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#80050B14"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    
    <!-- Tech Accent Corner (Top Left) -->
    <item android:width="15dp" android:height="15dp" android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00E5FF"/>
        </shape>
    </item>
</layer-list>
