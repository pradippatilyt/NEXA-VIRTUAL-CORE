<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Absolute Void -->
    <item>
        <shape>
            <solid android:color="#000000"/>
        </shape>
    </item>
    
    <!-- Top Holographic Glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1000dp"
                android:centerX="0.5"
                android:centerY="0.0"
                android:startColor="#2200E5FF"
                android:centerColor="#11000000"
                android:endColor="#00000000" />
        </shape>
    </item>
    
    <!-- Bottom Void Fog -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#1AFFFFFF"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>
